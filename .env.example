# Deluthium Ecosystem Hub - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Required: Your Deluthium JWT Token
# ============================================
DELUTHIUM_JWT=your-jwt-token-here

# ============================================
# Chain Configuration
# ============================================
# Default chain ID (56=BSC, 8453=Base, 1=Ethereum)
DELUTHIUM_CHAIN_ID=56

# Default slippage tolerance (%)
DELUTHIUM_SLIPPAGE=0.5

# ============================================
# Wallet Configuration (for trading)
# ============================================
DELUTHIUM_WALLET_ADDRESS=0xYourWalletAddress

# ============================================
# Service Ports
# ============================================
PORTAL_PORT=3000
ZEROX_PORT=3001
ONEINCH_PORT=3002
API_MONITOR_PORT=4000
REDIS_PORT=6379
POSTGRES_PORT=5432

# ============================================
# Deluthium API Endpoints
# ============================================
REST_API_URL=https://rfq-api.deluthium.ai
WS_URL=wss://mmhub.deluthium.ai/ws

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
# REQUIRED: Set a strong password! Generate with: openssl rand -base64 24
POSTGRES_PASSWORD=
POSTGRES_DB=deluthium

# ============================================
# Redis Configuration
# ============================================
# Optional: Set password for Redis (recommended for production)
REDIS_PASSWORD=

# ============================================
# API Monitor Authentication
# ============================================
# API Monitor Authentication
# ============================================
# API key for accessing monitoring endpoints
API_MONITOR_KEY=

# ============================================
# Market Maker Configuration
# ============================================
# Private key for signing quotes (required for hummingbot-mm)
# WARNING: Keep this secure! Use KMS/HSM in production.
MM_SIGNER_KEY=

# ============================================
# Logging
# ============================================
LOG_LEVEL=info

# ============================================
# Optional: AWS KMS for production signing
# ============================================
# AWS_REGION=us-east-1
# AWS_KMS_KEY_ID=your-kms-key-id
